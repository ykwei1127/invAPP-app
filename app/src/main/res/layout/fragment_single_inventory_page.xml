<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".inventory.SingleInventoryPage">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <Button
        android:id="@+id/button_goHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="回首頁"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline21"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_back"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="上一頁"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline35"
        app:layout_constraintStart_toStartOf="@+id/guideline34" />

    <Button
        android:id="@+id/button_save"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="儲存繼續輸入"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/button_back"
        app:layout_constraintEnd_toStartOf="@+id/guideline35"
        app:layout_constraintStart_toStartOf="@+id/guideline34" />

    <TableLayout
        android:id="@+id/tableLayout5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:divider="@drawable/table_v_divider"
        android:showDividers="middle|beginning|end"
        app:layout_constraintEnd_toStartOf="@+id/guideline35"
        app:layout_constraintStart_toStartOf="@+id/guideline34"
        app:layout_constraintTop_toTopOf="@+id/guideline21">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/table_h_divider"
            android:showDividers="middle|beginning|end"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="5dp"
                android:text="小庫別"
                android:background="#118bee"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_weight="3" />

            <TextView
                android:id="@+id/textView_singleUnit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="#000000"
                android:textSize="20sp"
                tools:text="UD藥局(P2)"
                android:layout_weight="7" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/table_h_divider"
            android:showDividers="middle|beginning|end"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="5dp"
                android:text="組別"
                android:background="#118bee"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_weight="3" />

            <TextView
                android:id="@+id/textView_singleGroup"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="#000000"
                android:textSize="20sp"
                tools:text="D*1"
                android:layout_weight="7" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/table_h_divider"
            android:showDividers="middle|beginning|end"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="5dp"
                android:text="商品名"
                android:background="#118bee"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_weight="3" />

            <TextView
                android:id="@+id/textView_singleName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="#000000"
                android:textSize="20sp"
                tools:text="AMARYL(降血糖藥)測試測試1231231"
                android:layout_weight="7" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/table_h_divider"
            android:showDividers="middle|beginning|end"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="5dp"
                android:text="藥碼"
                android:background="#118bee"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_weight="3" />

            <TextView
                android:id="@+id/textView_singleCode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="#000000"
                android:textSize="20sp"
                tools:text="1ACA50"
                android:layout_weight="7" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/table_h_divider"
            android:showDividers="middle|beginning|end"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="5dp"
                android:text="圖片"
                android:background="#118bee"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_weight="3" />

            <ImageView
                android:id="@+id/imageView_drug"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="7"
                android:src="@drawable/ic_baseline_photo_24"
                tools:ignore="SpeakableTextPresentCheck" />
        </TableRow>
    </TableLayout>

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#32e370"
        android:checked="true"
        android:textColor="#000000"
        android:textOff="減"
        android:textOn="加"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/editText_calculateAmount"
        app:layout_constraintEnd_toStartOf="@+id/editText_calculateAmount"
        app:layout_constraintTop_toTopOf="@+id/editText_calculateAmount" />

    <EditText
        android:id="@+id/editText_calculateAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="5"
        android:gravity="center"
        android:inputType="number"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline35"
        app:layout_constraintStart_toStartOf="@+id/guideline34"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout5"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView_singleInventoryUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/editText_calculateAmount"
        app:layout_constraintStart_toEndOf="@+id/editText_calculateAmount"
        app:layout_constraintTop_toTopOf="@+id/editText_calculateAmount"
        tools:text="錠" />

    <ProgressBar
        android:id="@+id/progressBar_singleInventory"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/button_save"
        app:layout_constraintEnd_toStartOf="@+id/guideline35"
        app:layout_constraintStart_toStartOf="@+id/guideline34" />

</androidx.constraintlayout.widget.ConstraintLayout>