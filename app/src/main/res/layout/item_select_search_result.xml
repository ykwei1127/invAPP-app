<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableLayout
        android:id="@+id/tableLayout_selectSearchResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:divider="@drawable/table_v_divider"
        android:showDividers="end|none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:id="@+id/tableRow_selectSearchResult"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:divider="@drawable/table_h_divider"
            android:focusable="true"
            android:gravity="center_vertical"
            android:showDividers="middle|beginning|end"
            android:weightSum="10">

            <TextView
                android:id="@+id/textView_selectMedUnit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="#000000"
                android:textSize="20sp"
                tools:text="UD藥局(P2)" />

            <TextView
                android:id="@+id/textView_selectMedGroup"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="#000000"
                android:textSize="20sp"
                tools:text="4級管制藥" />

            <TextView
                android:id="@+id/textView_selectMedAmount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="#000000"
                android:textSize="20sp"
                tools:text="100" />

        </TableRow>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>